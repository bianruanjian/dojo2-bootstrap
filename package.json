{
  "name": "widgets-web",
  "version": "0.0.7",
  "scripts": {
    "build-widgets": "dojo build widget",
    "build": "npm run build-widgets",
    "install": "cd site && npm i",
    "serve": "grunt webserv",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "dependencies": {
    "@dojo/framework": "~3.0.1",
    "@types/jquery": "3.3.0",
    "@types/popper.js": "1.11.0",
    "@types/bootstrap": "3.3.37",
    "tslib": "~1.8.1",
    "jquery": "3.3.1",
    "popper.js": "1.12.9",
    "bootstrap": "4.0.0"
  },
  "devDependencies": {
    "@dojo/cli-build-widget": "~2.0.0",
    "@dojo/cli-test-intern": "~2.0.0",
    "@dojo/test-extras": "~2.0.0",
    "@types/glob": "~5.0.0",
    "@types/grunt": "~0.4.0",
    "@types/node": "^6.0.46",
    "@types/sinon": "^1.16.35",
    "@types/archiver": "^0.15.37",
    "archiver": "^1.3.0",
    "intern": "~4.1.5",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-dojo2": "~0.1.3",
    "grunt-dojo2-extras": "^2.0.0-beta1.3",
    "grunt-shell": "^2.1.0",
    "grunt-tslint": "^5.0.1",
    "load-grunt-tasks": "^3.5.2",
    "ts-node": "^3.3.0",
    "typescript": "~2.6.1",
    "webserv": "^0.6.1",
    "husky": "0.14.3",
    "lint-staged": "7.0.4",
    "prettier": "1.12.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
