<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%- partial('google-analytics') %>
  <%
  var title = page.title;

  if (is_archive()){
    title = __('archive_a');

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = __('category') + ': ' + page.category;
  } else if (is_tag()){
    title = __('tag') + ': ' + page.tag;
  }
  %>
  <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%- open_graph({twitter_id: theme.twitter, google_plus: theme.google_plus, fb_admins: theme.fb_admins, fb_app_id: theme.fb_app_id}) %>
  <% if (theme.rss){ %>
    <link rel="alternate" href="<%= url_for(theme.rss) %>" title="<%= config.title %>" type="application/atom+xml">
  <% } %>
  <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
  <% } %>
  <% if (config.highlight.enable){ %>
    <link href="//fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet" type="text/css">
  <% } %>
  
  <link href="//cdn.bootcss.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <%- css('css/components/button/button-1.0.0') %>
  <%- css('css/components/container/container-1.0.0') %>
  <%- css('css/components/view/view-1.0.0') %>
  <%- css('css/components/grid-row/grid-row-1.0.0') %>
  <%- css('css/components/grid-column/grid-column-1.0.0') %>
  <%- css('css/components/image/image-1.0.0') %>
  <%- css('css/components/text/text-1.0.0') %>
  <%- css('css/components/label/label-1.0.0') %>
  <%- css('css/components/text-input/text-input-1.0.0') %>
  <%- css('css/components/input-group/input-group-1.0.0') %>
  <%- css('css/components/addon/addon-1.0.0') %>
  <%- css('css/components/textarea/textarea-1.0.0') %>
  <%- css('css/main') %>
  <%- css('css/style') %>
</head>
